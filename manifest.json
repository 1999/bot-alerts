{
  "name": "Bot alerts",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Send `/alert {msg}` to bot to send alerts!",
  "homepage_url": "http://tolya.me/bot-alerts",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "options_ui": {
      "page": "src/options_custom/index.html"
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "css": [
        "src/inject/inject.css"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    }
  ]
}
